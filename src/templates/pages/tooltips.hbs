{{> demo-header }}
<div data-page="modals">
    <header class="content-block bg--primary-color">
        <div class="container">
            <h2>Tooltips</h2>
        </div>
    </header>

	<div class="container content-block">
		<div class="tooltip-wrap">
			<h3>Title with a tooltip <button type="button" data-toggle-el="tipStandardInstallation" class="tooltip-icon"></button></h3>
			<div data-js-module="toggleElement" id="tipStandardInstallation" class="tooltip hidden">
				<div class="tooltip__box">
					<button type="button" class="tooltip__close" data-close-el="tipStandardInstallation"><i class="icon icon--sm">{{> icon-cross }}</i></button>
					<div class="rich-text">
						<h3>Tooltip title</h3>
						<p>Tooltip text</p>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
