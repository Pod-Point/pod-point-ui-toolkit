{{> demo-header }}
<div data-page="modals">

	<header class="demo-section-heading">
		<div class="container content-block">
			<h2>Tooltips</h2>
		</div>
	</header>

	<div class="container content-block">
		<div class="grid-row grid-row--flex grid-row--vertical-center">
			<div class="grid-col grid-col--md-8 text-center text-left-md">
				<div class="tooltip-wrap">
					<h3>Title with a tooltip <a href="#" data-toggle-el="tipStandardInstallation" class="tooltip-icon"></a></h3>
					<div data-js-module="toggleElement" id="tipStandardInstallation" class="tooltip hidden">
						<div class="tooltip__box">
							<a href="#" class="tooltip__close" data-close-el="tipStandardInstallation"><svg class="icon icon--xs"><use xlink:href="#general--cross"/></svg></a>
							<div class="rich-text">
								<h3>Tooltip title</h3>
								<p>Tooltip text</p>
							</div>
						</div>
					</div>
				</div>
				<div class="rich-text">
					{{ block.stepFourText }}
				</div>
			</div>
		</div>
	</div>

</div>
