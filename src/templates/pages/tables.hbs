                            <td>0.00kg</td>
                        </tr>
                        <tr>
                            <td>6852 MC</td>
                            <td>1</td>
                            <td>0.00kWh</td>
                            <td>0.00kg</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>


    <!-- STRIPED TABLE -->
    <section id="tablesStriped">
        <header class="content-block bg-light-gray">
            <div class="container">
                <h3>Striped fluid table</h3>
                <p>Add the class <code>.table--striped</code> to make the table striped</p>
            </div>
        </header>
        <div class="content-block">
            <div class="container">
                <table class="table--striped">
                    <thead>
                        <tr>
                            <th>Site</th>
