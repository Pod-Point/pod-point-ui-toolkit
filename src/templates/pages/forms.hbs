{{> demo-header }}
<div data-page="forms">
	<header class="demo-section-heading">
		<div class="container content-block">
			<h2>Forms</h2>
		</div>
	</header>


	<!-- INPUTS -->
	<section>
		<header class="demo-section-sub-heading">
			<div class="container">
				<h3>Inputs</h3>
			</div>
		</header>

		<div class="container content-block">
			<div class="form__group field-row">
				<label class="label--block">Input field</label>
				<div class="form-field-wrapper">
					<input type="text" placeholder="Sample placeholder text">
				</div>
			</div>

			<div class="form__group field-row">
				<label class="label--block">Input field - disabled</label>
				<div class="form-field-wrapper">
					<input type="text" disabled="true">
				</div>
			</div>

			<div class="form__group field-row has-content form__group--valid">
				<label class="label--block">Input field - valid</label>
				<div class="form-field-wrapper">
					<input type="text" placeholder="Sample placeholder text" class="has-content">
				</div>
			</div>

			<div class="form__group field-row has-content form__group--error">
				<label class="label--block">Input field - invalid</label>
				<div class="form-field-wrapper">
					<input type="text" placeholder="Sample placeholder text" class="has-content">
					<span class="form__error">This is an error message.</span>
				</div>
			</div>
		</div>
	</section>


	<!-- TEXT AREAS -->
	<section>
		<header class="demo-section-sub-heading">
			<div class="container">
				<h3>Text areas</h3>
			</div>
		</header>

		<div class="container content-block">
			<div class="form__group field-row">
				<label class="label--block">Text area</label>
				<div class="form-field-wrapper">
					<textarea type="text"></textarea>
				</div>
			</div>

			<div class="form__group field-row">
				<label class="label--block">Text area - disabled</label>
				<div class="form-field-wrapper">
					<textarea type="text" disabled="true"></textarea>
				</div>
			</div>

			<div class="form__group field-row has-content form__group--valid">
				<label class="label--block">Text area - valid</label>
				<div class="form-field-wrapper">
					<textarea type="text" class="has-content"></textarea>
				</div>
			</div>

			<div class="form__group field-row has-content form__group--error">
				<label class="label--block">Text area - invalid</label>
				<div class="form-field-wrapper">
					<textarea type="text" class="has-content"></textarea>
					<span class="form__error">This is an error message.</span>
				</div>
			</div>
		</div>
	</section>


	<!-- SELECT DROPDOWNS -->
	<section>
		<header class="demo-section-sub-heading">
			<div class="container">
				<h3>Select dropdowns</h3>
			</div>
		</header>

		<div class="container content-block">
			<div class="form__group field-row">
				<label class="label--block">Select dropdown</label>
				<div class="form-field-wrapper">
					<div class="select-wrapper">
						<select>
							<option value="00">00</option>
							<option selected value="01">01</option>
							<option value="02">02</option>
						</select>
					</div>
				</div>
			</div>

			<div class="form__group field-row">
				<label class="label--block">Select dropdown - disabled</label>
				<div class="form-field-wrapper">
					<div class="select-wrapper is-disabled">
						<select disabled="true">
							<option value="00">00</option>
							<option selected value="01">01</option>
							<option value="02">02</option>
						</select>
					</div>
				</div>
			</div>

			<div class="form__group field-row has-content form__group--valid">
				<label class="label--block">Select dropdown - valid</label>
				<div class="form-field-wrapper">
					<div class="select-wrapper">
						<select>
							<option value="00">00</option>
							<option selected value="01">01</option>
							<option value="02">02</option>
						</select>
					</div>
				</div>
			</div>

			<div class="form__group field-row has-content form__group--error">
				<label class="label--block">Select dropdown - invalid</label>
				<div class="form-field-wrapper">
					<div class="select-wrapper">
						<select>
							<option value="00">00</option>
							<option selected value="01">01</option>
							<option value="02">02</option>
						</select>
					</div>
					<span class="form__error">This is an error message.</span>
				</div>
			</div>
		</div>
	</section>


	<!-- CHECKBOXES -->
	<section>
		<header class="demo-section-sub-heading">
			<div class="container">
				<h3>Checkboxes</h3>
			</div>
		</header>

		<div class="container content-block">
			<div class="form__group">
				<div class="checkbox-wrap">
					<input type="checkbox" name="checkboxExample1" id="checkboxExample1" checked="checked">
					<label for="checkboxExample1">This is an example of a checkbox</label>
				</div>
			</div>
			<div class="form__group">
				<div class="checkbox-wrap">
					<input type="checkbox" name="checkboxExample2" id="checkboxExample2">
					<label for="checkboxExample2">This is an example of a checkbox with lots of text and a <a href="#" class="a">link</a>. Aenean sapien est, convallis sit amet euismod sit amet, porttitor at quam. Suspendisse consectetur nulla odio, et fringilla magna feugiat et.</label>
				</div>
			</div>
			<div class="form__group">
				<div class="checkbox-wrap">
					<input type="checkbox" name="checkboxExample3" id="checkboxExample3" disabled="true">
					<label for="checkboxExample3">This is an example of a disabled checkbox</label>
				</div>
			</div>
			<div class="form__group has-content form__group--error">
				<div class="checkbox-wrap">
					<input type="checkbox" name="checkboxExample4" id="checkboxExample4">
					<label for="checkboxExample4">This is an example of a checkbox with an error.</label>
					<span class="form__error">This is an error message.</span>
				</div>
			</div>
		</div>
	</section>


	<!-- RADIOS -->
	<section>
		<header class="demo-section-sub-heading">
			<div class="container">
				<h3>Radios</h3>
			</div>
		</header>

		<div class="container content-block">

			<div class="field-row form__group radios-wrap">
				<div class="radio-wrap">
					<input type="radio" name="radioExample" id="radioExample1" value="radioExample1" checked="checked"/>
					<label for="radioExample1" class="radio">Radio example one</label>
				</div>
				<div class="radio-wrap">
					<input type="radio" name="radioExample" id="radioExample2" value="radioExample2"/>
					<label for="radioExample2" class="radio">Radio example two</label>
				</div>
				<div class="radio-wrap">
					<input type="radio" name="radioExample" id="radioExampleDisabled" value="radioExampleDisabled" disabled/>
					<label for="radioExampleDisabled" class="radio">Radio example disabled</label>
				</div>
			</div>

			<div class="field-row form__group radios-wrap">
				<div class="radios-wrap">
					<div class="radio-wrap radio-wrap--inline">
						<input type="radio" name="radioExampleInline" id="radioExampleInline1" value="radioExampleInline1" checked="checked"/>
						<label for="radioExampleInline1" class="radio">Inline radio example one</label>
					</div>
					<div class="radio-wrap radio-wrap--inline">
						<input type="radio" name="radioExampleInline" id="radioExampleInline2" value="radioExampleInline2"/>
						<label for="radioExampleInline2" class="radio">Inline radio example two</label>
					</div>
				</div>
			</div>

			<div class="form-action-buttons">
				<button type="Submit" class="button">Submit</button>
			</div>
		</div>
	<section>
</div>
