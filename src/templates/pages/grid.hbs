<div data-page="grid" class="demo-page-content">

    {{> demo-sidebar }}

    <div class="demo-container-with-sidebar">
        <header class="content-block content-block--strip bg-primary">
            <div class="container">
                <h2>Grid</h2>
                <ul class="list--inline remove-link-styles font-weight-bold">
                    <li><a href="#gridRequired">Required files</a></li>
                    <li><a href="#gridBasic">Basic fluid grid</a></li>
                    <li><a href="#gridStacking">Grid stacking on mobile</a></li>
                    <li><a href="#gridResponsive">Fully responsive grid</a></li>
                </ul>
