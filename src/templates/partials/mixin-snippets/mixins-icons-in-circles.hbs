<figure class="figure-box"><pre>
@mixin icon-in-circle(
    $bg-colour: $icon-colour,
    $colour: $white,
    $border: none
);
</pre></figure>
<br>
<figure class="figure-box"><pre>
@mixin icon-in-circle--size(
    $dimension: $circle-icon-size-md
);
</pre></figure>
<br>
<figure class="figure-box"><pre>
@mixin icon-in-border-circle--size(
    $dimension: $circle-icon-size-lg
);
</pre></figure>
